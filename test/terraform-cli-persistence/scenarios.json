{
    "with_node": {
        "image": "mcr.microsoft.com/devcontainers/javascript-node:1-18",
        "features": {
            "terraform-cli-persistence": {},
            "ghcr.io/devcontainers/features/terraform:1": {}
        }
    },
    "zsh_shell": {
        "image": "mcr.microsoft.com/devcontainers/base:debian",
