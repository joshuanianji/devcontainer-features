{
    "name": "Github CLI Persistence",
    "id": "github-cli-persistence",
    "version": "0.0.1",
    "description": "Avoid extra logins from the Github CLI by preserving `~/.config/gh` folder across container instances.",
    "options": {},
    "mounts": [
        {
            "source": "${devcontainerId}-gh-cli",
            "target": "/dc/github-cli",
            "type": "volume"
        }
    ],
    "installsAfter": [
        "ghcr.io/devcontainers/features/github-cli"
    ]
}